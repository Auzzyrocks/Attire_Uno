<Page x:ConnectionId='1'
    x:Class="AttireApp.ForecastPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:AttireApp"
    xmlns:converters="using:AttireApp.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Page.Resources>
        <converters:StringFormatConverter x:Key="StringFormatConverter" />
    </Page.Resources>
    
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        
        <Grid Margin="0, 40, 0, 20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Location of Forecast -->
            <StackPanel BorderBrush="White" BorderThickness="2" Grid.Row="1" Grid.RowSpan="12" Grid.Column="1" Grid.ColumnSpan="1" Margin="5, 10, 5, 10" Padding="10">
                <TextBlock Foreground="SteelBlue" FontSize="42" HorizontalAlignment="Center">
                <Run x:ConnectionId='36'                                                                                  />
                <Run x:ConnectionId='37'                                                                                    />
                </TextBlock>

                <!-- Current Time -->
                <TextBlock Foreground="SteelBlue" FontSize="32" HorizontalAlignment="Center">
                <Run Text="Currently "/>
                <Run x:ConnectionId='34'                                                                             />
                <Run Text="C  ("/>
                <Run x:ConnectionId='35'                                                                             />
                <Run Text="F)"/>
                </TextBlock>

                <!-- Forecast Last Updated & Local Time-->
                <TextBlock Foreground="SteelBlue" HorizontalAlignment="Center">
                <Run Text="Last Updated: "/>
                <Run x:ConnectionId='33'                                                                 />
                </TextBlock>
                <TextBlock Foreground="SteelBlue" HorizontalAlignment="Center">
                <Run x:ConnectionId='32'                                                                />
                </TextBlock>


                <!-- Current Weather Conditions, Highs & Lows -->
                <TextBlock Foreground="SteelBlue" FontSize="45" HorizontalAlignment="Center" Margin="0,35,0,25">
                <Run x:ConnectionId='31'                                                                                                       />
                </TextBlock>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <TextBlock Foreground="SteelBlue" FontSize="25" HorizontalAlignment="Center" Margin="0,0,25,0">
                    <Run Text="H:"/>
                    <Run x:ConnectionId='29'                                                                                  />
                    <Run Text="C ("/>
                    <Run x:ConnectionId='30'                                                                                  />
                    <Run Text="F)"/>
                    </TextBlock>
                    <TextBlock Foreground="SteelBlue" FontSize="25" HorizontalAlignment="Center" Margin="25,0,0,0">
                    <Run Text="L:"/>
                    <Run x:ConnectionId='27'                                                                                  />
                    <Run Text="C ("/>
                    <Run x:ConnectionId='28'                                                                                  />
                    <Run Text="F)"/>
                    </TextBlock>
                </StackPanel>

                <!--################################################-->
                <!-- Hourly Weather Forecast for Current Day Hour 0 -->
                <!--################################################-->
                <TextBlock Text="Hourly Forecast" FontSize="42"/>
                <Border BorderBrush="DarkSlateGray" BorderThickness="2">
                    <StackPanel Orientation="Horizontal"  Margin="0,0,0,0" VerticalAlignment="Center" HorizontalAlignment="Center">
                        <!-- Weather Forecast Time -->
                        <TextBlock  Foreground="SteelBlue" FontSize="25" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,5,0" Height="35">
                        <Run x:ConnectionId='26'                                                                     />
                        </TextBlock>
                        <!-- Weather Forecast ICON -->
                        <Image x:ConnectionId='23'                                                                                  Height="70"/>
                        <!-- Weather Forecast Temp -->
                        <TextBlock Foreground="SteelBlue" FontSize="25" HorizontalAlignment="Center" Margin="25,0,0,0" VerticalAlignment="Center" Height="35">
                        <Run x:ConnectionId='24'                                                                      />
                        <Run Text="C ("/>
                        <Run x:ConnectionId='25'                                                                      />
                        <Run Text="F)"/>
                        </TextBlock>
                    </StackPanel>
                </Border>


                <!--################################################-->
                <!-- Hourly Weather Forecast for Current Day Hour   -->
                <!--################################################-->
                <Border BorderBrush="DarkSlateGray" BorderThickness="2">
                    <StackPanel Orientation="Horizontal"  Margin="0,0,0,0" VerticalAlignment="Center" HorizontalAlignment="Center">
                        <!-- Weather Forecast Time -->
                        <TextBlock  Foreground="SteelBlue" FontSize="25" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,5,0" Height="35">
                        <Run x:ConnectionId='22'                                                                     />
                        </TextBlock>
                        <!-- Weather Forecast ICON -->
                        <Image x:ConnectionId='19'                                                                                  Height="70"/>
                        <!-- Weather Forecast Temp -->
                        <TextBlock Foreground="SteelBlue" FontSize="25" HorizontalAlignment="Center" Margin="25,0,0,0" VerticalAlignment="Center" Height="35">
                        <Run x:ConnectionId='20'                                                                      />
                        <Run Text="C ("/>
                        <Run x:ConnectionId='21'                                                                      />
                        <Run Text="F)"/>
                        </TextBlock>
                    </StackPanel>
                </Border>

                <!--################################################-->
                <!-- Hourly Weather Forecast for Current Day Hour   -->
                <!--################################################-->
                <Border BorderBrush="DarkSlateGray" BorderThickness="2">
                    <StackPanel Orientation="Horizontal"  Margin="0,0,0,0" VerticalAlignment="Center" HorizontalAlignment="Center">
                        <!-- Weather Forecast Time -->
                        <TextBlock  Foreground="SteelBlue" FontSize="25" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,5,0" Height="35">
                        <Run x:ConnectionId='18'                                                                      />
                        </TextBlock>
                        <!-- Weather Forecast ICON -->
                        <Image x:ConnectionId='15'                                                                                   Height="70"/>
                        <!-- Weather Forecast Temp -->
                        <TextBlock Foreground="SteelBlue" FontSize="25" HorizontalAlignment="Center" Margin="25,0,0,0" VerticalAlignment="Center" Height="35">
                        <Run x:ConnectionId='16'                                                                       />
                        <Run Text="C ("/>
                        <Run x:ConnectionId='17'                                                                       />
                        <Run Text="F)"/>
                        </TextBlock>
                    </StackPanel>
                </Border>

                <!--################################################-->
                <!-- Hourly Weather Forecast for Current Day Hour   -->
                <!--################################################-->
                <Border BorderBrush="DarkSlateGray" BorderThickness="2">
                    <StackPanel Orientation="Horizontal"  Margin="0,0,0,0" VerticalAlignment="Center" HorizontalAlignment="Center">
                        <!-- Weather Forecast Time -->
                        <TextBlock  Foreground="SteelBlue" FontSize="25" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,5,0" Height="35">
                        <Run x:ConnectionId='14'                                                                      />
                        </TextBlock>
                        <!-- Weather Forecast ICON -->
                        <Image x:ConnectionId='11'                                                                                   Height="70"/>
                        <!-- Weather Forecast Temp -->
                        <TextBlock Foreground="SteelBlue" FontSize="25" HorizontalAlignment="Center" Margin="25,0,0,0" VerticalAlignment="Center" Height="35">
                        <Run x:ConnectionId='12'                                                                       />
                        <Run Text="C ("/>
                        <Run x:ConnectionId='13'                                                                       />
                        <Run Text="F)"/>
                        </TextBlock>
                    </StackPanel>
                </Border>

                <!--################################################-->
                <!-- Hourly Weather Forecast for Current Day Hour   -->
                <!--################################################-->
                <Border BorderBrush="DarkSlateGray" BorderThickness="2">
                    <StackPanel Orientation="Horizontal"  Margin="0,0,0,0" VerticalAlignment="Center" HorizontalAlignment="Center">
                        <!-- Weather Forecast Time -->
                        <TextBlock  Foreground="SteelBlue" FontSize="25" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,5,0" Height="35">
                        <Run x:ConnectionId='10'                                                                      />
                        </TextBlock>
                        <!-- Weather Forecast ICON -->
                        <Image x:ConnectionId='7'                                                                                   Height="70"/>
                        <!-- Weather Forecast Temp -->
                        <TextBlock Foreground="SteelBlue" FontSize="25" HorizontalAlignment="Center" Margin="25,0,0,0" VerticalAlignment="Center" Height="35">
                        <Run x:ConnectionId='8'                                                                       />
                        <Run Text="C ("/>
                        <Run x:ConnectionId='9'                                                                       />
                        <Run Text="F)"/>
                        </TextBlock>
                    </StackPanel>
                </Border>

                <!--################################################-->
                <!-- Hourly Weather Forecast for Current Day Hour   -->
                <!--################################################-->
                <Border BorderBrush="DarkSlateGray" BorderThickness="2">
                    <StackPanel Orientation="Horizontal"  Margin="0,0,0,0" VerticalAlignment="Center" HorizontalAlignment="Center">
                        <!-- Weather Forecast Time -->
                        <TextBlock  Foreground="SteelBlue" FontSize="25" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,5,0" Height="35">
                        <Run x:ConnectionId='6'                                                                      />
                        </TextBlock>
                        <!-- Weather Forecast ICON -->
                        <Image x:ConnectionId='3'                                                                                   Height="70"/>
                        <!-- Weather Forecast Temp -->
                        <TextBlock Foreground="SteelBlue" FontSize="25" HorizontalAlignment="Center" Margin="25,0,0,0" VerticalAlignment="Center" Height="35">
                        <Run x:ConnectionId='4'                                                                       />
                        <Run Text="C ("/>
                        <Run x:ConnectionId='5'                                                                       />
                        <Run Text="F)"/>
                        </TextBlock>
                    </StackPanel>
                </Border>

                <!-- Return to Home Page Button -->
                <Button x:ConnectionId='2' Content="Back to Home Page"                        HorizontalAlignment="Center" Height="40" Width="300" Margin="0, 30, 0, 50"/>

            </StackPanel>

        </Grid>
        
    </ScrollViewer>
    
</Page>

